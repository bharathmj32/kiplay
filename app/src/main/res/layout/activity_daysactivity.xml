<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".daysactivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF6D00"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Days of the Week"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#19D17070"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:paddingLeft="20dp"
                    android:tag="sunday"
                    android:text="Sunday"
                    android:textAlignment="center"
                    android:textColor="#4689C3"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#2DFBEE91"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:tag="monday"
                    android:paddingLeft="20dp"
                    android:text="Monday"
                    android:textAlignment="center"
                    android:textColor="#370707"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#19D17070"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:tag="tuesday"
                    android:paddingLeft="20dp"
                    android:text="Tuesday"
                    android:textAlignment="center"
                    android:textColor="#4689C3"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#2DFBEE91"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:tag="wednesday"
                    android:paddingLeft="20dp"
                    android:text="Wednesday"
                    android:textAlignment="center"
                    android:textColor="#370707"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#19D17070"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:tag="thursday"
                    android:paddingLeft="20dp"
                    android:text="Thursday"
                    android:textAlignment="center"
                    android:textColor="#4689C3"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#2DFBEE91"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:tag="friday"
                    android:paddingLeft="20dp"
                    android:text="Friday"
                    android:textAlignment="center"
                    android:textColor="#370707"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="#19D17070"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:onClick="speakup"
                    android:tag="saturday"
                    android:paddingLeft="20dp"
                    android:text="Saturday"
                    android:textAlignment="center"
                    android:textColor="#4689C3"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>