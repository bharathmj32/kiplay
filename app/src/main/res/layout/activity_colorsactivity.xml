<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7CCCCCCC"
        tools:context=".colorsactivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#B8F605"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Colors"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!-- Top Row -->
                <TextView
                    android:id="@+id/backkground"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Click The Colors"
                    android:textColor="#040000"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/paint_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/purple"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#800080"
                        android:onClick="paintandspeak"
                        android:tag="purple" />

                    <ImageButton
                        android:id="@+id/brown"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FF660000"
                        android:onClick="paintandspeak"
                        android:tag="brown" />

                    <ImageButton
                        android:id="@+id/red"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FF0026"
                        android:onClick="paintandspeak"
                        android:tag="red" />

                    <ImageButton
                        android:id="@+id/green"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FF009900"
                        android:onClick="paintandspeak"
                        android:tag="green" />

                    <ImageButton
                        android:id="@+id/orange"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#D8FB6F11"
                        android:onClick="paintandspeak"
                        android:tag="orange" />

                    <ImageButton
                        android:id="@+id/yellow"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FFFFCC00"
                        android:onClick="paintandspeak"
                        android:tag="yellow" />
                </LinearLayout>
                <!-- Bottom Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/blue"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#E82FD8F6"
                        android:onClick="paintandspeak"
                        android:tag="blue" />

                    <ImageButton
                        android:id="@+id/pink"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FD2AFD"
                        android:onClick="paintandspeak"
                        android:tag="pink" />

                    <ImageButton
                        android:id="@+id/violet"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#8f00ff"
                        android:onClick="paintandspeak"
                        android:tag="violet" />

                    <ImageButton
                        android:id="@+id/white"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FFFFFFFF"
                        android:onClick="paintandspeak"
                        android:tag="white" />

                    <ImageButton
                        android:id="@+id/gray"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FF787878"
                        android:onClick="paintandspeak"
                        android:tag="gray" />

                    <ImageButton
                        android:id="@+id/black"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="7dp"
                        android:background="#FF000000"
                        android:onClick="paintandspeak"
                        android:tag="black" />
                </LinearLayout>
            </LinearLayout>


        </ScrollView>


    </RelativeLayout>
</layout>
